<%= turbo_frame_tag bookmark do %>
  <%= form_with model: [bookmark.folder, bookmark] do |f| %>
    <%= render 'shared/errors', object: bookmark %>
    <div class="mb-3 row">
      <div class="col-sm-2 col-form-label">
        <%= f.label :title %>
      </div>
    </div>

    <div class="mb-3 row">
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="mb-3 row">
      <div class="col-sm-10">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>